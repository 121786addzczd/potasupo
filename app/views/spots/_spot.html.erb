<div class="card">
  <%= link_to image_tag(spot.images[0], class: :card__image), spot_path(spot.id), method: :get if spot.images.attached? %>
  <div class="card__body">
    <%= link_to spot.name, root_path, method: :get, class: :card__title %>
    <p class="card__summary">
      <%= spot.address %>
    </p>
    <div class="card-content">
      <div class="content average-score">
        <div class="star-rating mb-2">
          <div class="star-rating-front" style="width: <%= spot.review_score_percentage %>%">★★★★★</div>
          <div class="star-rating-back">★★★★★</div>
        </div>
        <div class="average-score-display ml-3 pt-2">
          <%= spot.avg_score %>点（<%= spot.reviews.count %>件のレビュー）
        </div>
      </div>
    </div>
  </div>
</div>