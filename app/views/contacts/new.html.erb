<% breadcrumb :contact %>
<div class="main">
  <div class="inner">
    <h2 class="page-heading">お問い合わせ</h2>
    <%= form_with(model: @contact, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="field">
        <%= f.label :name, "名前" %>
        <span class="indispensable">必須</span><br>
        <%= f.text_field :name, placeholder:"やまだ たろう" %>
      </div>
      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <span class="indispensable">必須</span><br>
        <%= f.email_field :email, placeholder:"example@xxxx.com"%>
      </div>
      <div class="field">
        <%= f.label :content, "内容" %>
        <span class="indispensable">必須</span><br>
        <%= f.text_area :content, :size=>"40x10" ,maxlength:"1000"%>
      </div>
      <div class="actions">
        <%= f.submit "送信", class: :form__btn, data: { confirm: "この内容で送信してもよろしいですか？" } %>
        <p><%=link_to '戻る', root_path, class: :back__form__btn %></p>
      </div>
    <% end %>
  </div>
</div>
