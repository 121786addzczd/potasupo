<h2 class="review-titile">レビューを書く</h2>

<div class="rating-box">
  <%= form_with model: review, url: spot_reviews_path(spot), local: true do |f| %>
    <div class="main-rating">
      <div class="ratings">
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
      </div>
      <div class="rating-value-display"><span id="rating-value-display">0</span>/5</div>
    </div>
    <%= f.hidden_field :spot_id, value: spot.id %>
    <%= f.hidden_field :score, id: "rating-value" %>
    <%= f.text_area :content, class: "review-textarea" %><br>
    <%= f.submit "保存", class: "review-btn" %>
    <%= link_to "他のレビューを見る", spot_reviews_path(spot), class: "review-link-btn"%>
  <% end %>
</div>