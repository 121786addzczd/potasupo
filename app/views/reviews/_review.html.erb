<div class="card">
  <%= link_to image_tag(review.image, class: :card__image), review_path(review.id), method: :get if review.image.attached? %>
  <div class="card__body">
    <%= link_to review.title, root_path, method: :get, class: :card__title %>
    <p class="card__summary">
      <%= review.title %>
    </p>
    <%= link_to "by #{review.user.nickname}", user_path(review.user), class: :card__user %>
  </div>
</div>