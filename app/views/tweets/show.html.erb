<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @tweet.title %>
      </p>
      <%= link_to "by #{@tweet.user.nickname}", user_path(@tweet.user), class: :prototype__user %>
      <% if user_signed_in? %>
        <% if current_user == @tweet.user%>
          <div class="prototype__manage">
            <%= link_to "編集する", edit_tweet_path, class: :prototype__btn %>
            <%= link_to "削除する", tweet_path, method: :delete, class: :prototype__btn, data: { confirm: "本当に削除しますか？" } %>
          </div>
        <% end %>
      <% end %>
      <div class="prototype__image">
        <%= image_tag @tweet.image %>
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">コメント</p>
          <p class="detail__message">
            <%= @tweet.text %>
          </p>
        </div>
      </div>
    </div>
  </div>
</main>
