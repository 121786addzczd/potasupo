<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">新規プロトタイプ投稿</h2>
        <%= form_with model: @tweet, local: true do |f|%>

        <%= render 'layouts/error_messages', model: f.object %>

          <div class="field">
            <%= f.label :title, "タイトル" %><br />
            <%= f.text_field :title %>
          </div>

          <div class="field">
            <%= f.label :text, "コメント" %><br />
            <%= f.text_area :text, class: :form__text %>
          </div>

          <div class="field">
            <%= f.label :image, "投稿画像" %><br />
            <%= f.file_field :image %>
          </div>

          <div class="actions">
            <%= f.submit "保存する", class: :form__btn  %>
          </div>
        <% end %>
    </div>
  </div>
</div>
