<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">MyProfileを編集</h2>
        <%= form_with model: @user, url: user_path(current_user), local: true do |f| %>
          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email %>
          </div>

          <div class="field">
            <%= f.label :nickname, "ユーザー名" %><br />
            <%= f.text_field :nickname %>
          </div>

          <div class="field">
            <%= f.label :image, "プロフィール画像" %><br />
              <div id="js-image"></div>
            <%= f.file_field :image, class: :form_image %>
          </div>

          <div class="field">
            <%= f.label :profile, "プロフィール" %><br />
            <%= f.text_area :profile, class: :form__text %>
          </div>

          <div class="actions">
            <%= f.submit "更新する", class: :form__btn  %>
          </div>
        <% end %>
    </div>
  </div>
</div>