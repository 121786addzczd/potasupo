      <%= link_to "プロフィールを編集する", edit_user_path(@user) %>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= @user.profile %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to "deviseでプロフィールを編集する", edit_user_registration_path %>
      <h2 class="page-heading">
        <%= "#{@user.nickname}さんのレビュー"%>
      </h2>
      <div class="user__card">
        <%# 部分テンプレートでそのユーザーが投稿したプロトタイプ投稿一覧を表示する %>
        <%# <%= render partial: "reviwes/review", collection: @user.reviwes.order('created_at DESC') %>
