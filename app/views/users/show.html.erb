<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.nickname}さんの情報" %>
      </h2>
      <%= link_to "プロフィールを編集する", edit_user_path(@user) %>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= @user.profile %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to "deviseでプロフィールを編集する", edit_user_registration_path %>
      <h2 class="page-heading">
        <%= "#{@user.nickname}さんのレビュー"%>
      </h2>
      <div class="user__card">
        <% @user.tweets.order('created_at DESC').each do |tweet| %>
          <div class="card">
            <%= link_to image_tag(tweet.image, class: :card__img ), tweet_path(tweet) %>
            <div class="card__body">
              <%= link_to tweet.title, tweet_path(tweet), class: :card__title %>
              <p class="card__summary">
                <%= tweet.text %>
              </p>
              <div class="card__user">
                <%= tweet.created_at.strftime("%Y年%m月%d日投稿 ") %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>